<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <ImageView
            android:id="@+id/img_truck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/truck"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/tv_truck_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="8sp"
            android:text="트럭속 화덕 두 남자 피자"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/sel_menu_b_g"
            android:letterSpacing="0.04"
            android:text="메뉴"
            />
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/sel_menu_b_g"
            android:letterSpacing="0.04"
            android:text="정보"
            />
        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/sel_menu_b_g"
            android:letterSpacing="0.04"
            android:text="리뷰"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_menu_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sel_menu_b_w_bg"
            />
        <TextView
            android:id="@+id/tv_info_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sel_menu_b_w_bg"
            />
        <TextView
            android:id="@+id/tv_reply_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/sel_menu_b_w_bg"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <ScrollView
        android:id="@+id/lay_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#4a4a4a"
                android:lineSpacingExtra="8sp"
                android:text="주인말"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                />

            <TextView
                android:id="@+id/tv_owner_say"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#4a4a4a"
                android:lineSpacingExtra="8sp"
                android:text="매일 매일 신선한 재료로 찾아가겠습니다!!"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                />

            <TextView
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:background="@color/col_blue"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#4a4a4a"
                android:lineSpacingExtra="8sp"
                android:text="운영정보"
                android:paddingLeft="16dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#4a4a4a"
                    android:lineSpacingExtra="8sp"
                    android:text="운영시간"
                    />

                <TextView
                    android:id="@+id/tv_runtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#4a4a4a"
                    android:lineSpacingExtra="8sp"
                    android:text="12:00 ~ 22:00"
                    android:layout_marginLeft="16dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="#ff4e45"
                    android:lineSpacingExtra="8sp"
                    android:text="휴무일"
                    />
                <TextView
                    android:id="@+id/tv_holiday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#ff4e45"
                    android:lineSpacingExtra="8sp"
                    android:layout_marginLeft="30dp"
                    android:text="월요일"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:background="@color/col_blue"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#4a4a4a"
                android:lineSpacingExtra="8sp"
                android:text="위치정보"
                android:paddingLeft="16dp"
                />
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#0090ff"
                android:lineSpacingExtra="8sp"
                android:text="서울특별시 성북구 정릉3동 정릉로 77"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lay_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            >
            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#4a4a4a"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="8sp"
                android:layout_marginLeft="20dp"
                />

            <LinearLayout
                android:id="@+id/lay_reply_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rating"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/img_reply_star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sel_ic_m_star"
                    android:layout_marginRight="2dp"
                    />
                <ImageView
                    android:id="@+id/img_reply_star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sel_ic_m_star"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    />
                <ImageView
                    android:id="@+id/img_reply_star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sel_ic_m_star"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    />
                <ImageView
                    android:id="@+id/img_reply_star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sel_ic_m_star"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    />
                <ImageView
                    android:id="@+id/img_reply_star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sel_ic_m_star"
                    android:layout_marginLeft="2dp"
                    />


            </LinearLayout>

            <ImageButton
                android:id="@+id/ibt_add_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_tr"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFC8C8C8"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lay_replys"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>