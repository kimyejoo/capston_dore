<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_storelist"
        android:gravity="center_vertical"
        android:paddingBottom="6dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        >
        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#4a4a4a"
                android:lines="1"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                >

                <ImageView
                    android:id="@+id/img_star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_ic_star_small"
                    android:layout_marginRight="2dp"
                    />
                <ImageView
                    android:id="@+id/img_star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_ic_star_small"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    />
                <ImageView
                    android:id="@+id/img_star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_ic_star_small"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    />
                <ImageView
                    android:id="@+id/img_star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_ic_star_small"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    />
                <ImageView
                    android:id="@+id/img_star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_ic_star_small"
                    android:layout_marginLeft="2dp"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#85858e"
                android:lines="1"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>